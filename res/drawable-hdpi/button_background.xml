<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <solid
                android:color="#02527A" />
            <stroke 
                android:width="1dp"
                android:color="#02527A" />
            <corners
                android:radius="5dp" />
            
        </shape>
    </item>
    <item >
        <shape >
            <gradient
                android:startColor="#007ebc"
                android:endColor="#007ebc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#007ebc" />
            <!-- <corners
                android:radius="5dp" /> -->
           
        </shape>        
    </item>
</selector>